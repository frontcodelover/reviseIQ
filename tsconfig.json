{
  "compilerOptions": {
    // Configurations ES et modules
    "target": "ES2022",
    "module": "ES2022",
    "resolveJsonModule": true,
    "moduleResolution": "node",

    // Support React
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    // Configuration TypeScript
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    // Types et chemins
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Support build
    "composite": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": ["node_modules"]
}
